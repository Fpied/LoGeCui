<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LoGeCuiMobile.Pages.LoginPage"
             Title="LoGeCui - Connexion"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <!-- Logo / Titre -->
            <Label Text="ðŸ›’ LoGeCui"
                   FontSize="48"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#27AE60"
                   Margin="0,0,0,40"/>

            <!-- Email -->
            <Label Text="Email :"
                   FontAttributes="Bold"
                   FontSize="16"/>
            <Entry x:Name="TxtEmail"
                   Placeholder="votre.email@example.com"
                   Keyboard="Email"
                   FontSize="16"
                   BackgroundColor="White"/>

            <!-- Mot de passe -->
            <Label Text="Mot de passe :"
                   FontAttributes="Bold"
                   FontSize="16"/>
            <Entry x:Name="TxtPassword"
                   Placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                   IsPassword="True"
                   FontSize="16"
                   BackgroundColor="White"/>

            <!-- Bouton Connexion -->
            <Button x:Name="BtnConnexion"
                    Text="Se connecter"
                    BackgroundColor="#27AE60"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="10"
                    Clicked="BtnConnexion_Clicked"/>

            <!-- Bouton Inscription -->
            <Button x:Name="BtnInscription"
                    Text="CrÃ©er un compte"
                    BackgroundColor="#3498DB"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="10"
                    Clicked="BtnInscription_Clicked"/>

            <!-- Message -->
            <Label x:Name="TxtMessage"
                   TextColor="Red"
                   FontSize="14"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   IsVisible="False"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>